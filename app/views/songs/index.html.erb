<style>
	table, th, td {
		border: 1px solid black;
		border-collapse: collapse;
		padding: 1em;
	}
</style>

<h1>Song List</h1>
<table>
	<tr>
		<th>Song Title</th>
		<th>Artist Name</th>
		<th>Genre</th>
		<th>Released?</th>
		<th>Release Year (if applicable) </th>
	</tr>
	<tbody>
		<% @songs.each do |song| %>
			<tr>
				<td><%= song.title %> [<%= link_to "show", song_path(song) %>] [<%= link_to "edit", edit_song_path(song) %>] [<%= link_to "delete", song, method: :delete, data: {confirm: "Are you sure you want to delete #{song.title}?"} %>]</td>
				<td><%= song.artist_name %></td>
				<td><%= song.genre %></td>
				<td><%= song.released %></td>
				<td><%= song.release_year %></td>
			</tr>
		<% end %>
	</tbody>

</table>


<%= link_to "new song", new_song_path %>