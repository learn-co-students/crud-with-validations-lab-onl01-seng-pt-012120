<%= form_for(@song) do |f| %>
    <% if @song.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@song.errors.count, "error") %>
                prohibited this post from being save:
            </h2>

            <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div id="title">
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>

    <div id="artist_name">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
    </div>

    <div id="genre">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    </div>

    <div id="released">
    <%= f.label :released %>
    <%= f.check_box :released %>
    </div>

    <div id="release_year">
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
    </div>

    <%= f.submit %>
    
<% end %>